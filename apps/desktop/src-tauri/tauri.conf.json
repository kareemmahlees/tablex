{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand":{
      "cwd": ".",
      "script": "bun run dev"
    },
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "publisher":"Kareem Ebrahim",
    "licenseFile":"../../../LICENSE",
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": ["icons/icon.ico"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "SuperCharge your database experience with a handful of toolkit designed for developers",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "Cross-Platform table viewer written in Rust",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "TableX",
  "identifier": "tablex",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TableX",
      "width": 1400,
      "height": 750,
      "minWidth": 768,
      "minHeight": 500,
        "center": true      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  }
}

