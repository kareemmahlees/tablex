{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Settings",
  "description": "The configuration object for TableX's settings.",
  "type": "object",
  "required": [
    "checkForUpdates",
    "pageSize",
    "sqlEditor"
  ],
  "properties": {
    "$schema": {
      "description": "Remote schema url for autocompletion.",
      "type": [
        "string",
        "null"
      ]
    },
    "pageSize": {
      "description": "Number of rows to be fetched per page.",
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "checkForUpdates": {
      "description": "Wether to automatically check for updates or not.",
      "type": "boolean"
    },
    "sqlEditor": {
      "description": "Configuration for the SQL editor.",
      "allOf": [
        {
          "$ref": "#/definitions/SQLEditorSettings"
        }
      ]
    }
  },
  "definitions": {
    "SQLEditorSettings": {
      "description": "Configuration for the SQL editor.",
      "type": "object",
      "required": [
        "fontSize",
        "vimMode"
      ],
      "properties": {
        "fontSize": {
          "description": "Editor font size.",
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "vimMode": {
          "description": "Enable vim keybindings in the editor",
          "type": "boolean"
        }
      }
    }
  }
}